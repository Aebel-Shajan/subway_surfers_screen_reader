{
	"name": "Gen Z Screen Reader",
  "version": "0.0.1",
  "manifest_version": 3,
	"description": "Make any piece of content brain rot.",
	"icons": {
		"128": "images/genz-screenreader-logo.png"
	},
	"permissions": ["sidePanel", "tabs", "tts"],
	"action": {
		"default_title": "Click to open panel"
	},
	"side_panel": {
		"default_path": "sidePanel.html"
	},
	"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.bundle.js"]
    }
  ],
	"background": {
		"service_worker": "service-worker.js",
		"type": "module"
	}
}